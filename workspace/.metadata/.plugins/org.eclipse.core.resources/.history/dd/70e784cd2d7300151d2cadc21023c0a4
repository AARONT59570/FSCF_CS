package AreaCalc;

public class AreaCalc {
	private Shape curShape;
	public enum Shape {
		TRIANGLE, SQUARE, CIRCLE
	}
	public void MakeShape(String shapeName) {
		switch(shapeName.toLowerCase()) {
		case "triangle" :
			curShape = Shape.TRIANGLE;
			break;
		case "circle" :
			curShape = Shape.CIRCLE;
			break;
		case "square" :
			curShape = Shape.SQUARE;
			break;
		}
	}
	

}
